{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "connected-react-router": "^4.4.1",
    "dotenv": "^6.0.0",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.5",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint:check": "node_modules/.bin/eslint src/**/*.js",
    "lint:fix": "node_modules/.bin/eslint src/**/*.js --fix",
    "start:development": "node -r dotenv/config ./node_modules/react-scripts/bin/react-scripts start dotenv_config_path=env/development.env",
    "start:test": "node -r dotenv/config ./node_modules/react-scripts/bin/react-scripts start dotenv_config_path=env/test.env",
    "start:production": "node -r dotenv/config ./node_modules/react-scripts/bin/react-scripts start dotenv_config_path=env/production.env",
    "build:development": "node -r dotenv/config ./node_modules/react-scripts/bin/react-scripts build dotenv_config_path=env/development.env",
    "build:test": "node -r dotenv/config ./node_modules/react-scripts/bin/react-scripts build dotenv_config_path=env/test.env",
    "build:production": "node -r dotenv/config ./node_modules/react-scripts/bin/react-scripts build dotenv_config_path=env/production.env",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1"
  }
}
